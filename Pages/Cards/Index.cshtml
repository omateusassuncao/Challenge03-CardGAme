@page
@model Challenge03.Pages.Cards.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <td>
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Historia)
            </th>
            <th>
                Autor
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Baralho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Classe)
                /
                @Html.DisplayNameFor(model => model.Cards[0].Elemento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].HP)
                /
                @Html.DisplayNameFor(model => model.Cards[0].SP)
            </th>
            <th>
                For
                /
                Def
                /
                Agi
                /
                Int
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cards) {

        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt=@Html.DisplayFor(modelItem => item.Nome) width="100" height="100">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Historia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assinatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baralho.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classe)
                /
                @Html.DisplayFor(modelItem => item.Elemento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HP)
                /
                @Html.DisplayFor(modelItem => item.SP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forca)
                /
                @Html.DisplayFor(modelItem => item.Defesa)
                /
                @Html.DisplayFor(modelItem => item.Agilidade)
                /
                @Html.DisplayFor(modelItem => item.Inteligencia)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">📝</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">🔍</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">🗑️</a>
                </td>
        </tr>
}
    </tbody>
</table>
