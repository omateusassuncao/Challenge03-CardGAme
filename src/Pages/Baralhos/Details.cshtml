@page
@model Challenge03.Pages.Baralhos.DetailsModel

<div>
    <h4>Baralho</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Baralho.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Baralho.Name)
        </dd>
        <dt class="col-sm-2">
            Cards
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var card in Model.Baralho.Cards)
                {
                    <li>
                        <a asp-page="/Cards/Details" asp-route-id="@card.Id">
                        @card.Nome | @card.Classe/@card.Elemento | @card.Forca/@card.Defesa
                        </a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Baralho?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
