@model Challenge03.Pages.Cards.EditModel

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Card.Id" />
            <div class="form-group">
                <label asp-for="Card.Nome" class="control-label"></label>
                <input asp-for="Card.Nome" class="form-control" />
                <span asp-validation-for="Card.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.Historia" class="control-label"></label>
                <input asp-for="Card.Historia" class="form-control" />
                <span asp-validation-for="Card.Historia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label @*asp-for="Card.ImageUrl"*@ class="control-label">Image URL</label>
                <input asp-for="Card.ImageUrl" class="form-control" />
                <span asp-validation-for="Card.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.Assinatura" class="control-label"></label>
                <input asp-for="Card.Assinatura" class="form-control" />
                <span asp-validation-for="Card.Assinatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

