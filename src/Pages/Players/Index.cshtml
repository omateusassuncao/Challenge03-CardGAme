@page
@model Challenge03.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player[0].Nome)
            </th>
            <th>
                Baralho
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Player) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-page="/Baralhos/Details" asp-route-id="@item.BaralhoId">                
                    @Html.DisplayFor(modelItem => item.Baralho.Name)
                </a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">📝</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">🔍</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">🗑️</a>
            </td>
        </tr>
}
    </tbody>
</table>
